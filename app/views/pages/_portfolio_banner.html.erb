    <% projects.each_with_index do |project, index| %>
      <div class="col-sm-5 col-md-4 mb-3">
        <div class="card">
          <%= image_tag(project[:image]) %>
          <div class="card-body d-flex flex-column">
            <h5><strong> <%= project[:title] %></strong></h5>
            <p><%= project[:description] %></p>
            <div>
              <% project[:skill].each do |skill| %>
                <span class="tag-skills"><%= skill %></span>
              <% end %>
            </div>
            <div class="d-flex justify-content-between links mt-auto">
              <strong><%= link_to "Visit Site ⇢", project[:url], target: "_blank" %></strong>
