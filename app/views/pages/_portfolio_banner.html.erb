<div class="container-fluid my-5" id="portfolio">
  <div class="header-title">
    <h2><strong>Portfolio</strong></h2>
    <div class="line-center"></div>
  </div>
<div class="grid-cards my-5">
  <% projects.each_with_index do |project, index| %>
    <div class="card">
      <%= image_tag(project[:image]) %>
      <div class="card-body">
        <h5><strong> <%= project[:title] %></strong></h5>
        <p><%= project[:description] %></p>
        <div class="d-flex flex-wrap gap-2">
          <% project[:skill].each do |skill| %>
            <span class="tag-skills"><%= skill %></span>
          <% end %>
        </div>
      </div>
      <div class="d-flex justify-content-between btn-line">
        <%= link_to project[:url], target: "_blank" do %>
          <span>Visit Site ⇢</span>
        <% end %>
        <%= link_to project[:code], target: "_blank" do %>
          <span>Show Code ⇢</span>
        <% end %>
      </div>
    </div>
  <% end %>
