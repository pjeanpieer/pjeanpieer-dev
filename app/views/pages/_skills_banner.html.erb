
<% technologies = [
     { name: "HTML5", image: "html5-logo.png"},
     { name: "CSS3", image: "css3-logo.png"},
     { name: "Javascript", image: "javascript-logo.png"},
     { name: "React", image: "react-logo.webp"},
     { name: "Angular", image: "angular-logo.png"},
     { name: "Python", image: "python-logo.png"},
     { name: "Bootstrap", image: "bootstrap-logo.png"},
     { name: "Heroku", image: "heroku-logo.webp"},
     { name: "Postgresql", image: "postgresql-logo.png"},
     { name: "Rails", image: "ruby-on-rails-logo.png"},
     { name: "Sass", image: "sass-logo.png"},
     { name: "Docker", image: "docker-logo.png"},
     { name: "Github", image: "github-logo.png"},
     { name: "Figma", image: "figma-logo.png"},
   ]
%>


<div class="container">
  <h2><strong>Skills</strong></h2>
  <div class="row gap-2 mt-5 justify-content-center">
    <% technologies.each do |technology| %>
      <div class="col-sm-3 col-md-2 px-0">
        <div class="technology">
          <%= image_tag(technology[:image], class: 'h-100') %>
          <p><%= technology[:name] %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
